<h1>Please fill the blank information about couriers</h1>
<%= form_with model: courier, url: new_path, method: :post, local: true do |form| %>
 <%=form.label "name"%><br>
 <%=form.text_field :name, placeholder: "name" %><br>
 <%=form.label "email"%><br>
 <%=form.text_field :email, placeholder: "email" %><br>
 <%=form.submit %>   
<% end %>    